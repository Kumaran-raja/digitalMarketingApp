<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activation_and_withdrawal_history"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7067F1"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/backactivity"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:importantForAccessibility="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Withdrawal &amp; Activation Histtory"
            android:textColor="#070505"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border"
                android:layout_margin="16dp"
                >

                <!-- Header Row -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sno1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/s_no"
                        android:textSize="25sp"
                        android:background="#494747"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/amount1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="25sp"
                        android:background="#494747"
                        android:textColor="@color/white"
                        android:text="Amount"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/description1"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="25sp"
                        android:background="#494747"
                        android:textColor="@color/white"
                        android:text="Description"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/date1"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Date"
                        android:textSize="25sp"
                        android:background="#494747"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                </TableRow>

            </TableLayout>


        </HorizontalScrollView>
        <TextView
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No History Available"
            android:textSize="30sp"
            android:textColor="#fff"
            android:background="#ED6161"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>



</LinearLayout>